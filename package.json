{
  "name": "project-manager",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "db:push": "DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' prisma db push",
    "db:generate": "DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' prisma generate",
    "db:studio": "DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' prisma studio",
    "db:reset": "DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' prisma db push --force-reset && npm run db:seed",
    "db:seed": "DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' node create-demo-user.js",
    "setup": "npm install && DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' npx prisma db push && DATABASE_URL='mongodb://localhost:27017/project-manager?replicaSet=rs0' npx prisma generate && npm run db:seed",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "clear-cache": "node clear-cache.js && npm run clean"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^6.14.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
